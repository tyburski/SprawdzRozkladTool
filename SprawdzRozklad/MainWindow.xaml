<Window x:Class="SprawdzRozklad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SprawdzRozklad"
        mc:Ignorable="d"
        Title="SRJ Tool" Height="700" Width="700"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="42"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row ="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.25*"/>
                    <ColumnDefinition Width="0.25*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="0.25*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Click="OpenFile_Click" Padding="5" HorizontalAlignment="Left" Margin="10,10,0,0" Background="#FFF9F9F9" BorderBrush="#CCC">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/Icons/folder-1485.png" Width="15" Height="15" Margin="0,0,5,0"/>
                        <TextBlock FontSize="12" Text="Otwórz..." VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Grid.Column="1" Click="Clear_Click" Padding="5" HorizontalAlignment="Left" Margin="0,10,0,0" Background="#FFF9F9F9" BorderBrush="#CCC">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/Icons/eraser-14546.png" Width="15" Height="15" Margin="0,0,5,0"/>
                        <TextBlock FontSize="12" Text="Wyczyść..." VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Grid Grid.Column="2" Margin="0,10,0,0">
                    <TextBox
                        x:Name="companyNr"
                        TextWrapping="NoWrap"
                        AcceptsReturn="False"
                        VerticalContentAlignment="Center"    
                        HorizontalContentAlignment="Left"
                        IsReadOnly="True"
                        IsReadOnlyCaretVisible="False"
                        Background="#FFF9F9F9"
                        BorderBrush="#CCC"
                        Foreground="#222222"
                        FontSize="10"
                        Height="30"
                        Padding="0"
                        Margin="0"
                        VerticalScrollBarVisibility="Disabled"
                        HorizontalScrollBarVisibility="Disabled"
                        /> 

                </Grid>

                <Button Grid.Column="3" Click="Start_Click" Padding="5" HorizontalAlignment="Left" Margin="10,10,0,0" Background="#FFF9F9F9" BorderBrush="#4ec15c">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/Icons/play-button-4211.png" Width="15" Height="15" Margin="0,0,5,0"/>
                        <TextBlock FontSize="12" Text="Sprawdź" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
            <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="1" HorizontalAlignment="Right">
                <TextBlock Text="Pomiń linie/kursy ważne do:" FontSize="10" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <DatePicker FontSize="10"  x:Name="validDatePicker" Width="100"/>
            </StackPanel>

            <TextBox Grid.Row="2"
    x:Name="textBox"
    FontSize="10"
    TextWrapping="Wrap"
    IsReadOnly="True"
    IsReadOnlyCaretVisible="False"
    VerticalScrollBarVisibility="Auto"
    HorizontalScrollBarVisibility="Disabled"
    AcceptsReturn="True"
    Padding="10"
    Margin="10,0,10,10"
    Background="#FFF9F9F9"
    BorderBrush="#CCC"
    BorderThickness="1"
    VerticalAlignment="Stretch"
    HorizontalAlignment="Stretch" />


        </Grid>
       
    </Grid>
</Window>
