<Window x:Class="SprawdzRozklad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SprawdzRozklad"
        mc:Ignorable="d"
        Title="SRJ Tool" Height="800" Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="23"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TabControl SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Sprawdzanie bazy" Tag="A"/>
            <TabItem Header="Generowanie skryptów" Tag="B"/>
        </TabControl>

        <ContentControl x:Name="MainContent" Grid.Row="1"/>

    </Grid>
</Window>
