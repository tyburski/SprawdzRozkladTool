<Window x:Class="SprawdzRozklad.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SprawdzRozklad"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="SRJ Tool" Height="40" Width="160"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Topmost="False">
    <Border CornerRadius="20" Padding="5" Background="Transparent">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Proszę czekać..." FontSize="12" Margin="0,0,0,5" HorizontalAlignment="Center"/>
            <ProgressBar IsIndeterminate="True" Width="150" Height="15" VerticalAlignment="Bottom"/>
        </StackPanel>
    </Border>
</Window>


