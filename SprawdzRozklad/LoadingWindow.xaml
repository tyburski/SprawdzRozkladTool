<Window x:Class="SprawdzRozklad.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SprawdzRozklad"
        mc:Ignorable="d"
        WindowStyle="None"
        Title="SRJ Tool" Height="100" Width="250"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        Topmost="True">
    <Border CornerRadius="10" Padding="20" Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Proszę czekać..." FontSize="16" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <ProgressBar IsIndeterminate="True" Width="200" Height="20"/>
        </StackPanel>
    </Border>
</Window>


